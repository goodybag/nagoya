{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "__DEV__": true,
        "__SERVER__": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "rules": {
        // Strict mode
        "strict": [2, "never"],

        // Variable shadow
        "no-shadow": 0,

        // Code style
        "indent": [2, 4],
        "quotes": [2, "single"],

        "camelcase": 0,
        "no-use-before-define": 0
    }
}
